.bold__red
	font-family: "Vida22Pro"
	font-size: 32px
	color: red

 
.btn
	cursor pointer
	width: 220px
	height: 45px
	&__center
		margin 0 auto
	&__gray
		cursor pointer
		border-radius: 5px
		background #777
		font-family: 'vida21pro'
		text-align: center
		color: #fff
		line-height: 45px
		border 2px solid #b5b5b5
	&__red
		cursor pointer
		width: 220px
		height: 45px
		border-radius: 5px
		background #9b1414
		font-family: 'vida21pro'
		text-align: center
		color: #fff
		line-height: 45px
		border 2px solid red
		transition animation
		margin 0
		&:hover
			border 2px solid red
			color red
			background #fff
		&__invert
			border 2px solid #fff
			color #fff
			background: transparent
		&__white
			border 2px solid red
			color red
			background: #fff
			
.small
	width: calc(100% / 3 - 2.5em)
	margin-right 2.5em
	+media(960px)
		width 100%
		margin 0 auto
.large
	width: calc(100% / 3 * 2 - 2.5em)
	margin-left 2.5em
	+media(960px)
		width 90%
		margin 0 auto 2em
