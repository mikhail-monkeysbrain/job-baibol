@import '../variables.styl'

.offices
	padding 50px 0
	background: #fff
	section
		display flex
		flex-wrap wrap
		justify-content flex-start
		align-items flex-start
		
.office
	max-width 386px
	width 33%
	margin 30px auto
	flex-shrink 0
	position relative
	box-shadow 0 0 5px 0 rgba(0, 0, 0, .25)
	+media(1200px)
		width 45%
	+media(640px)
		width 90%
	img
		width 100%
		height auto
	&--about
		padding 25px
		border-radius 0 45px 0% 0%
		position absolute
		left 0
		bottom -20%
		width 100%
		background #fff
		box-shadow 0 0 5px 0 rgba(0, 0, 0, .25)
		p
			margin 0
		&__header
			color: #a0142d
			font-family: "Vida22Pro"
			font-size: 24px
			font-weight: 400			
.offer
	width: 66.66%
	height: 300px
	padding-left 35px
	margin-top 3em
	+media(960px)
		width 100%
		padding-left 0
	&--text
		+media(960px)
			position: relative
			background: rgba(255,255,255, .85)
			z-index: 1
			max-width: 23em
			padding: 1.5em
			border-radius 10px
		&__consult
			font-size: 40px
			font-weight: 400
		&__phone
			color: #891b30
			font-family: "Vida22Pro"
			font-size: 53px
			font-weight: 400
			line-height 0
			+media(480px)
				font-size 37px
			span
				color: #424242
				font-family: "Vida21Pro"
				font-size: 25px
				font-weight: 400
				line-height 0 
	&--img
		position absolute
		bottom -5%
		right -10%
		+media(480px)
			right 0
			img
				max-width 320px