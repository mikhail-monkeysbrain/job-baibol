@import '../variables.styl'
.slider
	margin-top 40px
	margin-bottom 1em !important
.review
	padding 50px 0 0
	section
		width 100%
		background url(../img/review.jpg) center no-repeat
		background-size cover
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		justify-content center
		align-items center
		padding 50px
		p 
			color #404040
			font-size 24px
			text-align center
			font-weight 600
		.baibol
			color #e31e23
			font-size 50px
			text-decoration underline
			text-align center
			text-transform uppercase
			width 100%
			font-weight 600
			margin-bottom 25px
		.button
			width 232px
			height 61px
			border-radius 5px
			background-color #e31e23
			text-align center
			color #fefefe
			font-size 24px
			font-weight 400
			line-height 61px
	p
		margin 0
		padding 0
	&--item
		article
			width 90%
			margin 0 auto
			border-radius: 5px
			background rgba(255,255,255, .8)
			padding 30px
		&--author
			margin-top 1em
			font-weight 600
			color #e31e23
.slider
	margin-bottom 5em
.owl-nav
	width 100%
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	margin-left 2em
	+media(1024px)
		width 98%
.owl-prev, .owl-next
	width 26px 
	height 27px
	background: url('../img/arrow.png')
.owl-prev
	transform rotate(180deg)