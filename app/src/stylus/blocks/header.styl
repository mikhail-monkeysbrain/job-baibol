@import '../variables.styl'

header
	position fixed
	left 0
	top 0
	width 100% 
	background: url('../img/header.jpg') center repeat
	background-color: rgba(255,255,255, .65)
	min-height 136px
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.14)
	display flex
	align-items center
	z-index 101
	transition animation
	+media(480px)
		min-height 70px
	&.fix
		background-color: #fff
	
nav
	display flex
	align-items flex-end
	+media(960px)
		justify-content space-between
		width 95%
		margin 0 auto
	+media(640px)
		padding 0 20px
	.contacts
		+media(640px)
			display none
.logo
	position relative
	width 180px
	flex-shrink 0
	+media(480px)
		max-width 90px
		img
			width 100%
	&__text
		color: #a0142d
		font-size: 32px
		font-weight: 400
		position: absolute
		font-family: "Vida22Pro"
		width: 6.5em
		top: 0
		right: -8em
		+media(960px)
			position fixed
			width 100%
			right 0
			left 0
			text-align center
		+media(640px)
			display none

		
.menu
	height 34px
	background: #fff
	border-radius 5px
	flex-grow 1
	margin 0 20px
	justify-content space-around
	+media(960px)
		position: fixed
		display: flex
		flex-direction: column
		width: 100%
		height: calc(100% - 136px)
		left: 0
		margin: 0
		justify-content: space-around
		align-items: center
		top 136px
		left -100%
		transition animation
		&.open
			left 0
	+media(480px)
		height: calc(100% - 70px)
		top 70px
	&--item
		font-size: 18px
		transition animation
		+media(960px)
			height: 100%
			width: 100%
			display: flex
			justify-content: center
			align-items: center
			box-shadow: inset 0px 0px 20px -11px #000
			margin-top: -5px
		&:hover
			color: red
		&__lang
			color: red
			&::before
				content ''
				margin-right 5px
				width 20px
				height 13px
				display inline-block
				background: url('../img/rus.png')
	
.phone
	color: red
	font-size: 30px
	font-weight: 400
	line-height 0
	&__for-free
		color: #424242
		font-size: 14px
		font-weight: 400
		line-height 0

.burger-menu
	position: absolute
	width: 50px
	height: 50px
	cursor: pointer
	right 0
	transition animation
	top calc(50% - 25px)
	z-index 1
	&.menu-on
		.burger
			background: red
			&::before
				transform: rotate(45deg)
				-webkit-transform: rotate(45deg)
				top: 0px
			&::after
				transform: rotate(-45deg)
				-webkit-transform: rotate(-45deg)
				bottom: 0px

.burger
	position: absolute
	background: rgba(111,111,111,1)
	width: 100%
	height: 10px
	top: 50%
	right: 0px
	margin-top: -5px
	opacity: 1
	&::before
		position: absolute
		background: rgba(111,111,111,1)
		width: 50px
		height: 10px
		top: 20px
		content: ""
		display: block
	&::after
		position: absolute
		background: rgba(111,111,111,1)
		width: 50px
		height: 10px
		bottom: 20px
		content: ""
		display: block
.burger::after, .burger::before, .burger
	transition: all .3s ease-in-out
	-webkit-transition: all .3s ease-in-out

.burger-menu
	display none
	+media(960px)
		display block
		left 0
		right 0
		margin 0 auto
	+media(640px)
		left auto
		right 20px
		margin 0
	&.menu-on
		.burger
			background: rgba(111,111,111,.0)
			&::before
				transform: rotate(45deg)
				background: red
				top: 0px
			&::after
				transform: rotate(-45deg)
				background: red
				bottom: 0px
.hide__xl
	display none
	height auto
	padding: 10px
	&:first-child
		height: initial
		text-align: center
		color: red
		font-size: 32px
	+media(640px)
		display block
		.contacts
			display block
			.phone
				width: 100%
				text-align: center
				line-height: 2
				height: 100%
				display: flex
				flex-direction: column
				justify-content: space-around
				align-items: center
.contacts
	position absolute
	right 0
	top 25px
	+media(960px)
		position relative
		right auto
		top 15px
		background #fff
		padding 1em
	a
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		+media(960px)
			font-size 24px
		span
			margin-left 1em
			+media(960px)
				display none
.city
	display block
	margin-bottom 5px
	+media(640px)
		display none
	a
		color #e31e23